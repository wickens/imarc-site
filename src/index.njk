---
layout: base.njk
pagination:
  data: collections.posts
  size: 10                 # latest 10
  alias: posts
permalink: "{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% else %}index.html{% endif %}"
---
{% if pagination.pageNumber == 0 %}
  <h1 class="visually-hidden">Latest posts</h1>
{% endif %}

{% for post in posts %}
<article class="post-full">
  <h2 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <p class="meta">
    <time datetime="{{ post.date | isoDate }}">{{ post.date | date }}</time>
  </p>

  {{ post.templateContent | safe }}
</article>
<hr>
{% endfor %}

{% if pagination.href.next %}
<nav class="pagination-links">
  <a href="{{ pagination.href.next }}">Older&nbsp;Posts &rarr;</a> 
</nav>
{% else %}
<nav class="pagination-links">
  <a href="/archive/">View all posts â†’</a>
</nav>
{% endif %}

